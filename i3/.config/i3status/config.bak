# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
        color_good = "#2AA198"
        color_bad = "#586E75"
        color_degraded = "#DC322F"
}

order += "bitcoin_price"
order += "wireless _first_"
order += "ethernet _first_"
order += "vpn_status"
order += "sysdata cpu"
order += "sysdata ram"
# order += "load"
order += "disk /"
order += "disk /home"
order += "battery all"
# order += "load"
order += "tztime local"
# order += "ipv6"

bitcoin_price {
	format_bitcoin = " BitCoin {price}{symbol} "
	markets = "btcdeEUR"
}

sysdata cpu {
	format = " CPU {cpu_usage}% "
	cache_timeout = 0
}

sysdata ram {
	format = " RAM {mem_used_percent}% {mem_used} {mem_unit} "
	cache_timeout = 0
	mem_unit = 'dynamic'
}

disk "/" {
        # format = " hdd %avail "
        format = " root %avail "
}

disk "/home" {
        # format = " hdd %avail "
        format = " home %avail "
}

wireless _first_ {
	format_up = " WLAN %quality %essid %ip "
	format_down = " no WLAN "
}

ethernet _first_ {
# if you use %speed, i3status requires root privileges
        format_up = " LAN %ip %speed "
        format_down = " no LAN "
}

vpn_status {
	format = " VPN {name} "
}

battery all {
        # format = "%status %percentage %remaining %emptytime"
        format = " %status %percentage"
        format_down = "No battery"
        last_full_capacity = true
        integer_battery_capacity = true
        # status_chr = ""
        status_chr = "⚡"
        # status_bat = "bat"
        # status_bat = "☉"
        status_bat = ""
        # status_unk = "?"
        status_unk = ""
        # status_full = ""
        status_full = "☻"
        low_threshold = 15
        threshold_type = time
}

tztime local {
        # format = "%Y-%m-%d %H:%M:%S"
        format = " %d.%m.%Y %H:%M:%S "
}
